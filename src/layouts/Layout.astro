---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;

const {currentLocale}  = Astro;

---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/letter.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative ">
		<div class="absolute top-0 z-[-2] h-full w-full bg-neutral-950 bg-[radial-gradient(ellipse_50%_50%_at_50%_-20%,#63eb_-100%,rgba(255,255,255,0))]"></div>		
		<Header />
		
		<slot />
		<Footer />
		

		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>

	</body>
	</html>

<style is:global>

	:root{
		color-scheme: light dark;
	}

	html{
		font-family: 'Poppins';
		scroll-behavior: smooth;
	}

	body{
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	
	
</style>