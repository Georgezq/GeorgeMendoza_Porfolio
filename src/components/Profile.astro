---
import { Image } from "astro:assets";
import GithubInfo from "./icons/GithubInfo.astro";
import LinkeInInfo from "./icons/LinkeInInfo.astro";
import PinInfo from "./icons/PinInfo.astro";
import IconsProfile from "./IconsProfile.astro";
import myImage from "../../public/its_me.webp";
import { getI18N } from "../i18n";

const { currentLocale } = Astro;
const i18n = getI18N({currentLocale})
---

<div class="max-w w-[940px] mx-auto flex items-center justify-center  ">
  <div class="flex gap-14 flex-wrap items-center justify-center lg:justify-normal">
    <Image
    class="size-36 text-center md:size-52 rounded-full object-cover animate-fade-in-down"
    src={myImage}
    alt="Foto de George Mendoza"
    />
    
    <div class="info">
      <div class="message flex flex-col items-center lg:items-start animate-slide-in-left">
        <span class="text-2xl lg:text-4xl font-bold"> {i18n.HOME.NAME} </span>
        <span class="text-xl lg:text-2xl font-semibold opacity-90 mt-1">{i18n.HOME.JOBS}</span>
          <div class="country flex flex-row items-center gap-3 mt-4">
            <PinInfo />
            <span class="text-xl font-semibold opacity-65">Ecuador</span>
            <p></p>
          </div>
        </div>
        
        <nav class="flex gap-x-4 justify-center lg:justify-start animate-fade-in-up">
          <IconsProfile href="https://www.linkedin.com/in/george-mendoza-masache/">
            <LinkeInInfo class="size-6" />
            LinkedIn
          </IconsProfile>
          <IconsProfile href="https://github.com/Georgezq">
            <GithubInfo class="size-6" />
            Github
          </IconsProfile>
        </nav>
      </div>
  </div>
</div>